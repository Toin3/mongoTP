% layout 'default';
<h1>Liste des collections de la base <%= $databasename %></h1>
% if (join('', @$collections) eq "") {
	<p>Aucune collections dans cette base de donn√©es</p>
% } else {
<div id="dblist">
	<ul>
	% foreach my $collectionname (@$collections){
		<li><a href="/collectiondetails/<%= $databasename %>/<%= $collectionname %>"><%= $collectionname %></a></li>
	% }
	</ul>
</div>
% }
